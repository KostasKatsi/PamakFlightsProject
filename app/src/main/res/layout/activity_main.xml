<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kostas.pamakflights.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:width="400dp"
                android:layout_below="@+id/text1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:width="400dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Αφετηρία:"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="30sp" />

            <TextView

                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Πόλη,Αεροδρόμιο"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/autoCompleteTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Χώρα"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView

                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Χώρα"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:width="400dp"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Πόλη,Αεροδρόμιο"
                android:layout_marginTop="21dp"
                android:layout_below="@+id/autoCompleteTextView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:width="400dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Προορισμός:"
                android:textSize="30sp"
                android:layout_marginTop="38dp"
                android:layout_below="@+id/autoCompleteTextView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ημερομηνία Αναχώρησης:"
                android:textSize="30sp"
                android:layout_marginTop="42dp"
                android:layout_below="@+id/autoCompleteTextView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <CalendarView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calendarView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginBottom="40dp"
                />

            <CalendarView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calendarView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"

                />

            <TextView

                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ημερομηνία Επιστροφής:"
                android:textSize="30sp"
                android:layout_marginTop="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/calendarView"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/calendarView"
                android:visibility="gone"
                android:id="@+id/hidden">

                <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Αριθμός ενηλίκων (άτομα άνω των 12 ετών):"
                android:layout_marginTop="420dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                 />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:inputType="number"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/editText"
                    android:layout_below="@+id/textView7" />

                <TextView
                android:id="@+id/kidslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Αριθμός παιδιών (2 έως 12 ετών):"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                 />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="0"
                android:inputType="number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:id="@+id/kidsvalue"
                android:layout_below="@+id/kidslabel" />

                <TextView
                android:id="@+id/babylabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Αριθμός βρεφών (έως 2 ετών):"
                android:layout_below="@+id/kidsvalue"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="0"
                android:inputType="number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:id="@+id/babyvalue"
                android:layout_below="@+id/babylabel" />

                <TextView
                android:id="@+id/antapokrisiLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Εμφάνιση πτήσεων χωρίς ανταπόκριση:"
                android:layout_below="@+id/babyvalue"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

                <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/antapokrisiValue"
                android:layout_alignBaseline="@+id/antapokrisiLabel"
                android:layout_alignBottom="@+id/antapokrisiLabel"
                android:layout_toRightOf="@+id/antapokrisiLabel"
                android:layout_toEndOf="@+id/antapokrisiLabel"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

                <TextView
                android:id="@+id/nomismaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Επιλογή νομίσματος για εμφάνιση τιμής:"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/antapokrisiLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />


                <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/nomismaLabel"
                android:id="@+id/radiogroup"
                >

                    <RadioButton
                    android:text="US"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dollarButton"
                    android:layout_weight="1"
                    android:checked="true" />

                    <RadioButton
                    android:text="EUR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/euroButton"
                    android:checked="false" />

                </RadioGroup>

                <TextView
                android:id="@+id/maxpriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ανώτατο χρηματικό όριο στην τελικη τιμή:"
                android:layout_below="@+id/radiogroup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:id="@+id/maxpriceValue"
                android:layout_below="@+id/maxpriceLabel" />

                <TextView
                    android:id="@+id/classLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Επιλογή κατηγορίας θέσης:"
                    android:layout_below="@+id/maxpriceValue"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/classLabel"
                    android:id="@+id/radiogroup2">

                    <RadioButton
                        android:text="ECONOMY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/economyButton"
                        android:layout_weight="1"
                        android:checked="true" />

                    <RadioButton
                        android:text="PREMIUM_ECONOMY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/premiumButton"
                        android:checked="false" />

                    <RadioButton
                        android:text="BUSINESS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/businessButton"
                        android:checked="false" />

                    <RadioButton
                        android:text="FIRST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstButton"
                        android:checked="false" />

                </RadioGroup>
            </RelativeLayout>

            <Button
                android:text="Ψαξε"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/find"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/hidden"
                android:layout_marginLeft="80dp"
                />

            <Button
                android:text="Περισσοτερα..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/more"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/find"
                android:layout_toEndOf="@+id/find" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
